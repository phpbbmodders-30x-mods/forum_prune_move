	<action-group>
		<sql>ALTER TABLE phpbb_forums ADD COLUMN prune_move INT(9) UNSIGNED NOT NULL DEFAULT 0;</sql>
		<open src="adm/style/acp_forums.html">
			<edit>
				<find><![CDATA[		<dl>
			<dt><label for="prune_sticky">{L_PRUNE_STICKY}:</label></dt>
			<dd><label><input type="radio" class="radio" name="prune_sticky" value="1"<!-- IF S_PRUNE_STICKY --> id="prune_sticky" checked="checked"<!-- ENDIF --> /> {L_YES}</label>
				<label><input type="radio" class="radio" name="prune_sticky" value="0"<!-- IF not S_PRUNE_STICKY --> id="prune_sticky" checked="checked"<!-- ENDIF --> /> {L_NO}</label></dd>
		</dl>]]></find>
				<action type="after-add"><![CDATA[		<dl>
			<dt><label for="prune_move">{L_PRUNE_MOVE}:</label><br /><span>{L_PRUNE_MOVE_EXPLAIN}</span></dt>
			<dd><select name="prune_move" id="prune_move"><option class="sep" value="0">{L_DISABLED}</option>{S_PRUNE_MOVE_OPTIONS}</select></dd>
		</dl>]]></action>
			</edit>
		</open>
		<open src="includes/acp/acp_forums.php">
			<edit>
				<find>						'forum_password_unset'	=&gt; request_var('forum_password_unset', false),
					);</find>
				<action type="after-add"><![CDATA[					$forum_data['prune_move'] = 0;
					if ($forum_data['forum_type'] == FORUM_POST)
					{
						$forum_data['prune_move'] = request_var('prune_move', 0);
					}]]></action>
			</edit>
			<edit>
				<find>							'prune_freq'			=&gt; 1,</find>
				<action type="after-add">							'prune_move'			=&gt; 0,</action>
			</edit>
			<edit>
				<find>					'S_PRUNE_ENABLE'			=&gt; ($forum_data['enable_prune']) ? true : false,</find>
				<action type="after-add">					'S_PRUNE_MOVE_OPTIONS'		=&gt; make_forum_select(($action == 'edit') ? $forum_data['prune_move'] : false, ($action == 'edit') ? $forum_data['forum_id'] : false, false, true),</action>
			</edit>
		</open>
		<open src="includes/functions_admin.php">
			<edit>
				<find>function prune(</find>
				<inline-edit>
					<inline-find>$auto_sync = true</inline-find>
					<inline-action type="after-add">, $prune_move = false</inline-action>
				</inline-edit>
			</edit>
			<edit>
				<find>	return delete_topics('topic_id', $topic_list, $auto_sync, false);</find>
				<action type="before-add">	if ($prune_move)
	{
		// $prune_move is the forum id we want to move our posts to
		return move_topics($topic_list, $prune_move, $auto_sync);
	}</action>
			</edit>
			<edit>
				<find>function auto_prune($forum_id</find>
			</edit>
			<edit>
				<find>	$sql = 'SELECT forum_name</find>
				<inline-edit>
					<inline-find>forum_name</inline-find>
					<inline-action type="after-add">, prune_move</inline-action>
				</inline-edit>
			</edit>
			<edit>
				<find>prune($forum_id, $prune_mode, $prune_date, $prune_flags, true</find>
				<inline-edit>
					<inline-find>prune($forum_id, $prune_mode, $prune_date, $prune_flags, true</inline-find>
					<inline-action type="after-add">, $row['prune_move']</inline-action>
				</inline-edit>
			</edit>
		</open>
		<open src="language/en/acp/forums.php">
			<edit>
				<find>?&gt;</find>
				<action type="before-add">$lang = array_merge($lang, array(
	'PRUNE_MOVE'			=&gt; 'Move pruned forums',
	'PRUNE_MOVE_EXPLAIN'	=&gt; 'If you select a forum from the list below, topics will be moved to that forum instead of deleted.',
));</action>
			</edit>
		</open>
	</action-group>
</mod>